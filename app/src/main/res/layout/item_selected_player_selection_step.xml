<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_selected_player"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="220dp"
        android:textSize="14dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Mehedeniuc Gheorghe" />

    <ImageView
        android:id="@+id/btn_remove_player"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_player_name"
        android:padding="4dp"
        app:srcCompat="@drawable/white_circle_with_border" />

</RelativeLayout>