<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="30dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/connecting_line_top"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/txt_badge_rank_count"
            android:layout_marginStart="12dp"
            android:background="@color/color_fab_blue_normal" />


        <TextView
            android:id="@+id/txt_badge_rank_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_badge_nemestats_points"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:padding="2dp"
            android:textColor="@color/color_fab_blue_normal"
            android:textSize="10dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_team_win_loss"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_sentiment_very_satisfied" />

        <View
            android:id="@+id/connecting_line_bottom"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_badge_rank_count"
            android:layout_marginStart="12dp"
            android:background="@color/color_fab_blue_normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="Geo meh dasda sjdsdk ask"
        android:textColor="@color/color_game_definition_name"
        android:textSize="14dp" />


</LinearLayout>