<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/color_material_gray_100"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/selector_item_game_definition"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_thumbnail_game_definition"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="-6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_game_definition_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                android:text="App Name "
                android:textColor="@color/color_game_definition_name"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/container_game_rankings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/played_date"
                android:textColor="@color/color_material_gray_600"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_game_played_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="14 Oct 2017"
                android:textColor="@color/color_fab_blue_normal"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/game_notes"
                android:textColor="@color/color_material_gray_600"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_game_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/game_notes"
                android:textColor="@color/color_material_gray_800"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>